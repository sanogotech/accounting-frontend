<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <!--Sidebar content-->

      <p>
        Search:
        <input ng-model="$ctrl.query" />
      </p>

      <p>
        Sort by:
        <select ng-model="$ctrl.orderProp">
          <option value="item">Alphabetical</option>
          <option value="date">Newest</option>
        </select>
      </p>

    </div>
    <div class="col-md-10">
      <!--Body content-->

      <ul class="purchases">
        <li ng-repeat="purchases in $ctrl.purchases | filter:$ctrl.query | orderBy:$ctrl.orderProp"
        class="invoice-table">
          <p>{{invoice.item}}</p>
          <p>{{invoice.amount}}</p>
        </li>
      </ul>

    </div>
  </div>
</div>
